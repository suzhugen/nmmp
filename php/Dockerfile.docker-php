RUN mkdir -p /data/www && chmod -R 655 /data/www
VOLUME [ "/data/www" ]


COPY entrypoint-my /usr/local/bin/
RUN chmod -R 777 /usr/local/bin/entrypoint-my

EXPOSE 9000 

