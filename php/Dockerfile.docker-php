FROM php:5.6-fpm
USER root

RUN docker-php-source extract \
	&& docker-php-source delete

RUN apt-get update && apt-get install -y \
		libfreetype6-dev \
		libjpeg62-turbo-dev \
		libmcrypt-dev \
		libpng-dev \
	&& docker-php-ext-install -j$(nproc) iconv mcrypt \
	&& docker-php-ext-configure gd --with-freetype-dir=/usr/include/ --with-jpeg-dir=/usr/include/ \
	&& docker-php-ext-install -j$(nproc) gd

RUN docker-php-ext-install -j$(nproc)  mysqli &&  docker-php-ext-enable mysqli \
&& docker-php-ext-install -j$(nproc)  pdo_mysql &&  docker-php-ext-enable pdo_mysql \
&& docker-php-ext-install -j$(nproc) pcntl &&  docker-php-ext-enable pcntl 


